<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Games</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav>
        <a href="/">Home</a>
        <a href="/games">Games</a>
        <a href="/cart">Cart</a>
        <a href="/purchases">Purchase History</a>
        <% if (user) { %>
            <a href="/auth/logout">Logout</a>
        <% } else { %>
            <a href="/auth/login">Login</a>
            <a href="/auth/register">Register</a>
        <% } %>
        <% if (user && user.is_admin) { %>
            <a href="/admin/dashboard">Admin Dashboard</a>
        <% } %>
    </nav>
    <div class="container">
        <h1>Manage Games</h1>
        <% if (games.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Sales Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% games.forEach(function(game) { %>
                        <tr>
                            <td><img src="<%= game.image_url %>" alt="<%= game.title %>"></td>
                            <td><%= game.title %></td>
                            <td><%= game.description %></td>
                            <td>$<%= game.price %></td>
                            <td><%= game.sales_count %></td>
                            <td>
                                <a href="/admin/edit_game/<%= game.id %>" class="edit-btn">Edit</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No games available.</p>
        <% } %>
    </div>
</body>
</html>
